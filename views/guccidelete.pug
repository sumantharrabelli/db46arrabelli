extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let gucciid = toShow._id 
    - let guccitype = toShow.Itemname 
    - let quantityc = toShow.quantity
    - let pricep = toShow.price 
    - let actionid = "/resource/gucci/" + gucciid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='gucciAttr mr-3') gucci ID is: 
        div #{gucciid} 
      div.row 
        div(class='gucciAttr mr-3') gucci Type is: 
        div #{guccitype} 
      div.row 
        div(class='gucciAttr mr-3') gucci quantity is: 
        div #{quantityc} 
      div.row 
        div(class='gucciAttr mr-3') gucci Price is: 
        div #{pricep} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/gucci' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first s
      fetch(actionid, { 
        method: 'DELETE'       
      }).then((resp) => { 
        return resp.json();  
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/gucci' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 